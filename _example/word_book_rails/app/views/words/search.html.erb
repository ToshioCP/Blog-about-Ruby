  <h1 class="my-2">単語検索</h1>
  <%= form_with url: words_list_path, method: :get do |form| %>
    <div>
      <%= form.label :en, "英単語", class: "form-label" %><br>
      <%= form.text_field :en, value: @search_word, class: "form-control" %>
      <% if flash.key? :alert %>
        <%= flash[:alert] %>
      <% end %>
    </div>
    <div class="my-2">
      <%= form.submit "検索",  class: "btn btn-primary" %>
    </div>
  <% end %>
</div>